<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.basicbankingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BankingApp">
        <activity
            android:name="com.example.raghav.bankingApp.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.raghav.bankingApp.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.example.raghav.bankingApp.User_List_Activity"
            android:label="Banking System"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.raghav.bankingApp.User_Data"
            android:label="User Details"
            android:parentActivityName="com.example.raghav.bankingApp.User_List_Activity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.raghav.bankingApp.Send_To_User_Activity"
            android:label="Transfer Money"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.raghav.bankingApp.History_Transfer"
            android:label="Transactions"
            android:parentActivityName="com.example.raghav.bankingApp.User_List_Activity"
            android:screenOrientation="portrait" />

    </application>

</manifest>